<h1>Bitly Clone<h1>

<p><%= @errors if @errors %></p>

<form action="/shorten" method="post">
<input type = "Text" name = "long_url" placeholder="Insert your url here">
<input type = "submit" value = "Shorten">

</form>

<table class="table">
	<tr>
	<th>Long URL</th>
	<th>Short URL</th>
	<th>click count</th>
	</tr>
	<% @urls.each do |url| %>
		<tr>
		<td>
			<a href="<%= url.long_url %>">
			<%= url.long_url %>
		</td>

		<td>
			<a href="/<%= url.short_url %>">
			<%= url.short_url %>
		</td>
		<td><%= url.click_count%></td>
		<td>
			<form action="/<%= url.id%></vote" method="post">
				<input type="submit" value="Vote">
			</form>
		</td>
	<% end %>
</table>
